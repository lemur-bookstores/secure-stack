{
  "name": "@lemur-bookstores/mesh",
  "version": "0.0.1",
  "description": "Secure Service Mesh for SecureStack - Hybrid encryption, JWT auth, and service discovery",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:bundle && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "securestack",
    "mesh",
    "service-mesh",
    "grpc",
    "encryption",
    "jwt",
    "microservices",
    "security"
  ],
  "author": "@elkincp5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lemur-bookstores/secure-stack.git",
    "directory": "packages/mesh"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lemur-bookstores/core": "*",
    "@grpc/grpc-js": "1.9.14",
    "@grpc/proto-loader": "0.7.10",
    "jsonwebtoken": "9.0.2",
    "uuid": "9.0.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
